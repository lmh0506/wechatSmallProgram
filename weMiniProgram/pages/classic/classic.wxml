<!--pages/classic/classic.wxml-->
<view class="header">
  <epsoide-cmp class="epsoide" index="{{classic.index}}"></epsoide-cmp>
  <like-cmp
    class="like" 
    bind:like="onLike"
    isLike="{{classic.like_status === 1}}" 
    count="{{classic.fav_nums}}"></like-cmp>
</view>
<movie-cmp
  img="{{classic.image}}"
  content="{{classic.content}}"></movie-cmp>