<!--components/classic/music/index.wxml-->
<view class="container" hidden="{{hidden}}" class="container">
  <image class="classic-img {{isPlay ? 'rotation' : ''}}"  src="{{img}}"></image>
  <image class="player-img" bind:tap="onPlay" src="{{isPlay ? pauseSrc : playSrc}}"></image>
  <image class="tag" src="./images/music@tag.png"></image>
  <text class="content">{{content}}</text>
</view>
