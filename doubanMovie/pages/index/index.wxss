/**index.wxss**/
page{
  background-color: '#fff';
  display: flex;
  flex-direction: column;
}

.page-header{
  display: flex;
  width: 100%;
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}

.page-header-text{
  padding: 20rpx 40rpx;
  color: #999;
  text-align: center;
}

.page-body{
  display: flex;
  flex: 1;
  flex-direction: column;
}

.item{
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #ccc;
}

.poster{
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}

.meta{
  flex: 1;
}

.meta .title, .meta .sub_title{
  display: flex;
  margin-bottom: 15rpx;
}
.meta .title{
  font-size: 32rpx;
}

.meta .sub_title{
  font-size: 16rpx;
  color: #999;
}

.rating{
  font-size: 38rpx;
  font-weight: bold;
  color: red;
}

.artist{
  color: #999;
  font-size: 28rpx;
}
