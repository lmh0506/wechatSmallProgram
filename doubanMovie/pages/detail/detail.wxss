/* pages/detail/detail.wxss */
.meta{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 50rpx 5rpx;
  height: 1000rpx;
}
.poster{
  width: 100%;
  height: 90%;
  margin-bottom: 30rpx;
}

.title, .info, .country{
  padding-left: 30rpx;
}

.info, .country{
  font-size: 24rpx;
  color: #888;
  margin-top: 20rpx;
}

.summary{
  padding: 30rpx 20rpx;
  line-height: 1.6;
  font-size: 26rpx;
}

.label{
  display: block;
  font-weight: bold;
  font-size: 35rpx;
}

