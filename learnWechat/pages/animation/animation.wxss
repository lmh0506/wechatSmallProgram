/* pages/animation/animation.wxss */
.main{
  width: 100%;
  height: 300rpx;
}

.animation{
  width: 100rpx;
  height: 100rpx;
  background-color: greenyellow;
  animation: scaleAndRotate 5s infinite;
}

@keyframes scaleAndRotate{
  0% {
    transform: scale(1) rotate(0deg);
  }
  35% {
    transform: scale(2) rotate(90deg);
  }
  75% {
    transform: scale(2) rotate(90deg) translate(50rpx, -100rpx);
  }
  100% {
    transform: scale(1) rotate(0deg) translate(0rpx, 0rpx);
  }
}
